{
  "name": "rctelc",
  "private": true,
  "version": "1.0.1",
  "main": "electron/main.js",
  "scripts": {
    "app": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "vite",
    "build-web": "vite build",
    "build-app": "electron-builder",
    "build": "npm run build-web && npm run build-app"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.example.viteapp",
    "productName": "Desktop-WebApp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "shortcutName": "Web+Desktop App",
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "concurrently": "^9.1.2",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
